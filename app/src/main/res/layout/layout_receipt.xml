<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#FFFFFF">

    <!-- Logo uniquement sur le PDF -->
    <ImageView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/logo"
        android:scaleType="fitCenter"
        android:contentDescription="Logo" />

    <!-- Titre -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="REÇU DE TRANSACTION"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="#000000" />

    <!-- Montant -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Montant:"
            android:textColor="#000000"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:id="@+id/receipt_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/receipt_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CDF"
                android:layout_marginStart="4dp"
                android:textColor="#000000" />
        </LinearLayout>
    </LinearLayout>

    <!-- Statut -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Statut:"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/receipt_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="En attente"
            android:gravity="end"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Numéro du client -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Client:"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/receipt_to_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0976075391"
            android:gravity="end"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- Référence marchand -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Réf. Marchand:"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/receipt_merchant_ref"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="20250930000107755"
            android:gravity="end"
            android:textColor="#000000"
            android:textSize="12sp" />
    </LinearLayout>

    <!-- Date -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Date:"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/receipt_created_at"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="30/09/2025 00:01"
            android:gravity="end"
            android:textColor="#000000" />
    </LinearLayout>

    <!-- ID Transaction -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ID Transaction:"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/receipt_transaction_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="N/A"
            android:gravity="end"
            android:textColor="#000000"
            android:textSize="10sp" />
    </LinearLayout>

    <!-- Ligne de séparation -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginVertical="10dp" />

    <!-- Pied de page -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Merci pour votre confiance"
        android:textSize="12sp"
        android:gravity="center"
        android:textColor="#666666"
        android:layout_marginTop="10dp" />

</LinearLayout>